<UserControl x:Class="AccuSchedule.UI.Views.Dialogs.WaitingDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:AccuSchedule.UI.Views.Dialogs"
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800" UseLayoutRounding="True">


    <Grid Margin="16">

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <ProgressBar
              Style="{StaticResource MaterialDesignCircularProgressBar}"
              Value="0"
              Height="100"
              Width="100"
              IsIndeterminate="True" />
        

            <TextBlock Text="{Binding Range}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            
        </StackPanel>
    </Grid>
</UserControl>
